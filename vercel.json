{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.ts",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(login|register|logout|userhome|story|comment|follow|unfollow|save|like|unlike|search|user)(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}
